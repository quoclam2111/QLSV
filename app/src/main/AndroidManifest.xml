<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.teamforone.quanlysinhvien">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Quản Lý Sinh Viên"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".ui.LoginActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.MainActivity"
            android:exported="false"
            android:label="Quản Lý Sinh Viên"/>
        <activity
            android:name=".ui.QuanLySinhVien"
            android:exported="false"
            android:label="Danh Sách Sinh Viên"
            android:parentActivityName=".ui.MainActivity" /> <!-- Add Student -->
        <activity
            android:name=".ui.AddSinhVienActivity"
            android:exported="false"
            android:label="Thêm Sinh Viên"
            android:parentActivityName=".ui.QuanLySinhVien" /> <!-- Edit Student -->
        <activity
            android:name=".ui.EditSinhVienActivity"
            android:exported="false"
            android:label="Cập Nhật Sinh Viên"
            android:parentActivityName=".ui.QuanLySinhVien" />
    </application>

</manifest>